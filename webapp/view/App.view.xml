<mvc:View xmlns="sap.m" 
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:core="sap.ui.core"
          controllerName="19SD.sapui5.controller.App"
          displayBlock="true">
      <Shell id="shell">
      <App id="app">
           <pages>
                  <Page id="pageId" title="{i18n>appTitle}">
                        <headerContent>
                               <Button icon="sap-icon://action" id="helloDialogHeader" press=".onOpenDialogHeader" class="sapUiSmallMarginEnd"/>
                        </headerContent>
                        <content>
                              <mvc:XMLView id="view" viewName="19SD.sapui5.view.HelloPanel"/>
                              <mvc:XMLView id="view2" viewName="19SD.sapui5.view.InvoicesList"/>
                        </content>
                  </Page>
            </pages> 
      </App>
      </Shell>
</mvc:View>